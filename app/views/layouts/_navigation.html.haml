.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'RubyTij', root_path, :class => :brand
      %ul.nav.pull-right
        %li.divider-vertical
        - unless current_user
          %li= link_to t('user.sessions.sign_in'), '/auth/github'
        - else
          %ul.nav
            %li= link_to t('actions.new', :item => t('activerecord.models.post') ), new_post_path
          %li.dropdown
            %a.dropdown-toggle{ :'data-toggle' => :dropdown, :href => '#' }
              = t 'user.account'
              %b.caret
            %ul.dropdown-menu
              %li= link_to t('user.registrations.show'), '#'
              %li= link_to t('user.sessions.destroy'), user_session_path, :method => :delete
