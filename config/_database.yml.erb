defaults: &defaults
  adapter: <%= @db_engine %>
  encoding: utf8
  pool: 5
  host: localhost
  username: <%= @db_username %>
<% if @db_password %>
  password: <%= @db_password %>
<% end %>
  min_messages: warning

test:
  <<: *defaults
  database: <%= @app_name %>_test

<%= Rails.env %>:
  <<: *defaults
  database: <%= @app_name %>_<%= Rails.env %>
